@if (Visivel)
{
    <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Adicionar Nova Tarefa</h5>
                    <button type="button" class="btn-close" @onclick="Fechar"></button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Fechar">Fechar</button>
                    <button class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>
}


@code{
    [Parameter]
    public bool Visivel { get; set; }

    [Parameter]
    public EventCallback OnFechar { get; set; }

    private async Task Fechar()
    {
        await OnFechar.InvokeAsync();
    }
}